{
	"$schema": "https://json.schemastore.org/tsconfig",
	"display": "Next.js TSConfig",
	"extends": "./base.json",
	"compilerOptions": {
		"lib": ["dom", "dom.iterable", "esnext"],
		"jsx": "preserve",
		"module": "ESNext",
		"moduleResolution": "Bundler",
		"allowJs": true,
		"noEmit": true,
		"incremental": true,
		"plugins": [
			{
				"name": "next"
			}
		]
	},
	"include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
	"exclude": ["node_modules"]
}
